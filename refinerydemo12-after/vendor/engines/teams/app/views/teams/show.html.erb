<% content_for :body_content_title do %>
  <%= @team.name %>
<% end %>

<% content_for :body_content_left do %>
  <section>
    <h1>Name</h1>
    <p>
      <%=raw @team.name %>
    </p>
  </section>
  <section>
    <h1>Bio</h1>
    <p>
      <%=raw @team.bio %>
    </p>
  </section>
  <section>
    <h1>Photo</h1>
    <p>
      <%= image_fu @team.photo, nil %>
    </p>
  </section>
<% end %>

<% content_for :body_content_right do %>
  <aside>
    <h2><%= t('.other') %></h2>
    <ul id="teams">
      <% @teams.each do |team| %>
        <li>
          <%= link_to team.name, team_path(team) %>
        </li>
      <% end %>
    </ul>
  </aside>
<% end %>

<%= render :partial => "/shared/content_page" %>
