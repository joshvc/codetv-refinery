<% content_for :body_content_title do %>
  <%= @driver.name %>
<% end %>

<% content_for :body_content_left do %>
  <section>
    <h1>Name</h1>
    <p>
      <%=raw @driver.name %>
    </p>
  </section>
  <section>
    <h1>Bio</h1>
    <p>
      <%=raw @driver.bio %>
    </p>
  </section>
  <section>
    <h1>Photo</h1>
    <p>
      <%= image_fu @driver.photo, nil %>
    </p>
  </section>
  <section>
    <h1>Team</h1>
    <p>
      <%=raw @driver.team_id %>
    </p>
  </section>
<% end %>

<% content_for :body_content_right do %>
  <aside>
    <h2><%= t('.other') %></h2>
    <ul id="drivers">
      <% @drivers.each do |driver| %>
        <li>
          <%= link_to driver.name, driver_path(driver) %>
        </li>
      <% end %>
    </ul>
  </aside>
<% end %>

<%= render :partial => "/shared/content_page" %>
