<% content_for :body_content_title do %>
  <%= @team.name %>
<% end %>

<% content_for :body_content_left do %>
  <section>
    <p>
      <%=raw @team.bio %>
    </p>
  </section>
  <section>
    <p>
      <%= image_fu @team.photo, '400x300' %>
    </p>
  </section>
  <section>
  <p>
    <h2>Team Drivers</h2>
    <% @team.drivers.each do |driver| %>
      <li><%= link_to driver.name, driver_path(driver) %></li>
    <% end %>
  </p>
  </section>
  
<% end %>

<% content_for :body_content_right do %>
  <aside>
    <h2><%= t('.other') %></h2>
    <ul id="teams">
      <% @teams.each do |team| %>
        <li>
          <%= link_to team.name, team_path(team) %>
        </li>
      <% end %>
    </ul>
  </aside>
<% end %>

<%= render :partial => "/shared/content_page" %>
